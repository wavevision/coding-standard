  "homepage": "https://github.com/wavevision/coding-standard",
  "config": {
    "platform": {
      "php": "7.4"
    },
    "sort-packages": true
  },
  "require": {
    "php": ">=7.4",
    "php-parallel-lint/php-parallel-lint": "^1.2",
    "phpstan/phpstan": "^0.12",
    "slevomat/coding-standard": "^6.4"
  },
  "archive": {
    "exclude": [
      "/.*",
      "/build.xml",
      "/package.json",
      "/phpstan.neon",
      "/phpunit.xml",
      "/prettier.config.js",
      "/scss",
      "/ts",
      "/tsconfig.json",
      "/yarn.lock"
    ]
  }
}
